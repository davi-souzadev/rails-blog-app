<main style="display: flex;
  height: 100vh;
  width: 100vw;
  justify-content: center;
  padding: 16px;
  flex-direction: column;
  align-items: center;
  gap: 16px;
">
  <h1>Blog App</h1>

  <% if articles_path %>
    <ul style="list-style: none">
      <% @articles.each do |article|  %>
        <li>
          <span><%= article.title %></span>
          <p><%= article.body %></p>

        </li>
      <% end %>
    </ul>
    <p>Find me in app/views/articles/index.html.erb</p>
  <% end %>
</main>
